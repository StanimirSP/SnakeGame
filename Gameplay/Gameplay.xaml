<UserControl x:Class="Gameplay.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gameplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Canvas x:Name="GameCanvas" Loaded="GameCanvas_Loaded" MouseLeave="GameCanvas_MouseLeave" Background="#FFD4D4D4" MouseMove="GameCanvas_MouseMove">
		<Ellipse x:Name="SnakeHead" Fill="#FF00FF00" Height="15" Stroke="Black" Width="15"/>
		<Label x:Name="lblScore" Canvas.Left="10" Canvas.Top="10" Height="31" Width="127" FontSize="20" FontWeight="Bold"/>
	</Canvas>
</UserControl>
